<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="10dp"
    android:background="@color/bgColor"
     android:layout_marginTop="10dp"
    android:gravity="end"


    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivSendReact"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_phone"
        android:visibility="gone"


         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="end"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/send_chat_bg"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"




            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvSndTime"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="2dp"
                android:text="Yesterday"
                android:textColor="#4B4E4C"
                android:textSize="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSndMsg" />

            <TextView
                android:id="@+id/tvSndMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:gravity="start"

                android:maxWidth="250dp"
                android:padding="5dp"
                android:text="Hello my friend,Howfgdfhhdhgllo my friend,How are you .I hope u re great"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>



</LinearLayout>


